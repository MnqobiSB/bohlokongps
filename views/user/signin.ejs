<% layout('layouts/boilerplate') -%>

<section id="signin">
	<div class="container contact">
		<div class="row">
			<div class="col-md-8 offset-2">
				<form action="/users/signin" method="POST" class="contact__form">
					<div class="form-group">
						<label class="contact__label" for="username">Username</label>
						<input type="text" id="username" class="form-control contact__input" name="username" placeholder="username" required>
					</div>
					<div class="form-group">
						<label class="contact__label" for="password">Password</label>
						<input type="password" id="password" class="form-control contact__input" name="password" placeholder="password" required>
					</div>
					
					<button type="submit" class="contact__btn">Submit</button>
				</form>
				
				<div class="mt-4">
					<a href="/forgot-password">Forgot password?</a>
				</div>
			</div>
		</div>
	</div>
</section>

