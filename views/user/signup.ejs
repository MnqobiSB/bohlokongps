<% layout('layouts/boilerplate') -%>
<div class="jumbotron jumbotron-fluid page__header">
  <div class="container">
    <div class="page__header--text-box">
      <h1 class="display-4 heading-primary page__header--heading color-light">Admin Sign Up</h1>
      <p class="lead heading-primary--sub">Sign Up As Website Admin.</p>
    </div>
  </div>
</div>

<section id="signin">
	<div class="container contact">
		<div class="row">
			<div class="col-md-8 offset-2">
				<form action="/users/signup" method="POST" class="contact__form" enctype="multipart/form-data">
					<div class="form-group"class="form-group">
						<label for="username" class="contact__label">Username:</label>
						<input type="text" id="user" class="form-control contact__input" name="username" value="<%= username %>" placeholder="username" required>
					</div>
					<div class="form-group">
						<label for="password" class="contact__label">Password:</label>
						<input type="password" id="password" class="form-control contact__input" name="password" placeholder="password" required>
					</div>
					<div class="form-group">
						<label for="email" class="contact__label">Email:</label>
						<input type="email" id="email" class="form-control contact__input" name="email" value="<%= email %>" placeholder="email" required>
					</div>
					<div class="form-group">
						<label for="image" class="contact__label">Image:</label>
						<input type="file" id="image" class="form-control contact__input" name="image">
					</div>
					<div class="form-group">
						<button type="submit" class="contact__btn">Submit</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>
